<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="datainterfacetables_order_form_view" model="ir.ui.view">
            <field name="name">datainterfacetables.order.form</field>
            <field name="model">datainterfacetables.order</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="ModelTitle">
                    <sheet>
                        <field name="idTekkeys" string="ID TEKKEYS"/>
                        <field name="clientName" string="Client Name"/>
                        <field name="number" string="Number"/>
                        <field name="dateTekkeys" string="Data Tekkeys"/>
                        <field name="orderLines" string="Order Lines"/>
                        <field name="totals" string="Total"/>
                        <field name="InvoiceAdresse" string="Invoice Adresse"/>
                        <field name="shippingAdresse" string="shipping Adresse"/>
                        <field name="shippingFees" string="shipping Fees"/>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="dataInterfaceTables_order_tree_view" model="ir.ui.view">
            <field name="name">datainterfacetables.order.tree</field>
            <field name="model">datainterfacetables.order</field>
            <field name="arch" type="xml">
                <tree string="Orders">
                    <field name="id"/>
                    <field name="idTekkeys"/>
                    <field name="number"/>
                    <field name="dateTekkeys"/>
                    <field name="orderLines"/>
                    <field name="totals"/>
                    <field name="InvoiceAdresse"/>
                    <field name="shippingAdresse"/>
                    <field name="shippingFees"/>
                </tree>
            </field>
        </record>

        <record id="dataInterfaceTables_order_import_action" model="ir.actions.server">
            <field name="name">Import orders data to CRM</field>
            <field name="model_id" ref="dataInterfaceTables.model_datainterfacetables_order"/>
            <field name="binding_model_id" ref="dataInterfaceTables.model_datainterfacetables_order"/>
            <field name="state">code</field>
            <field name="code">action = records.importData()</field>
        </record>


        <record id="dataInterfaceTables_order_import_scheduler" model="ir.cron">
            <field name="name">Backup scheduler</field>
            <field name="model_id" ref="dataInterfaceTables.model_datainterfacetables_order"/>
            <field name="state">code</field>
            <field name="code">model.cronImportData()</field>
            <field name="numbercall">-1</field>
            <field name="interval_type">hours</field>
            <field name="interval_number">12</field>
            <field name="doall">False</field>
            <field name="active">True</field>
        </record>

        <record id="datainterfacetables_order_act_window" model="ir.actions.act_window">
            <field name="name">order data interface tables</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">datainterfacetables.order</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples click here to add new ModelTitle.
                </p>
            </field>
        </record>

        <menuitem name="Orders" id="data_order_menu" parent="dataInterfaceTables_menu" action="datainterfacetables_order_act_window" sequence="30"/>

    </data>
</odoo>