        <record id="dataInterfaceTables_lead_tree_view" model="ir.ui.view">
            <field name="name">datainterfacetables.lead.tree</field>
            <field name="model">datainterfacetables.lead</field>
            <field name="arch" type="xml">
                <tree string="ModelTitle">
                    <field name="name"/>
                    <field name="email_from"/>
                    <field name="phone"/>
                    <field name="city"/>
                    <field name="country_id"/>
                </tree>
            </field>
        </record>

        <record id="dataInterfaceTables_lead_import_action" model="ir.actions.server">
            <field name="name">Import leads data to CRM</field>
            <field name="model_id" ref="dataInterfaceTables.model_datainterfacetables_lead"/>
            <field name="binding_model_id" ref="dataInterfaceTables.model_datainterfacetables_lead"/>
            <field name="state">code</field>
            <field name="code">action = records.importData()</field>
        </record>


        <record id="dataInterfaceTables_lead_import_scheduler" model="ir.cron">
            <field name="name">Backup scheduler</field>
            <field name="model_id" ref="dataInterfaceTables.model_datainterfacetables_lead"/>
            <field name="state">code</field>
            <field name="code">model.cronImportData()</field>
            <field name="numbercall">-1</field>
            <field name="interval_type">hours</field>
            <field name="interval_number">12</field>
            <field name="doall">False</field>
            <field name="active">True</field>
        </record>

        <record id="datainterfacetables_lead_act_window" model="ir.actions.act_window">
            <field name="name">leads data interface tables</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">datainterfacetables.lead</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples click here to add new ModelTitle.
                </p>
            </field>
        </record>

        <menuitem name="Leads" id="data_lead_menu" parent="dataInterfaceTables_menu" action="datainterfacetables_lead_act_window" sequence="20"/>

    </data>
</odoo>