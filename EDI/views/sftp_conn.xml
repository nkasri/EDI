                            </header>
                    <sheet>
                        <group style="width:80%">
                             <field name="sftp_conn"/>
                            <field name="supplier" />
                            <field name="priceListName"/>
                            <field name="listFields"/>
                            <field name="listFieldConfig"/>
                            <field name="priceListNameFinal"/>
                        </group>

                    </sheet>
                </form>
            </field>
        </record>
