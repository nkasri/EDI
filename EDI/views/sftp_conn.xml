         <!-- price list config form view-->
        <record model="ir.ui.view" id="view_edi_price_list_config_form">
            <field name="name">Price list configuration</field>
            <field name="model">edi.price_list_config</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                                <button name='return_view' string="Configure fields" type="object" class="oe_highlight" groups="base.group_user" />
